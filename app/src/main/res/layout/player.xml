<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    app:cardElevation="1dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="#000"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/app_bar"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/colorPrimaryDark"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:id="@+id/btn_small_player_show"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp">
                    <ImageView
                        android:src="@drawable/ic_chevron_down_regular"
                        android:scaleType="fitCenter"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="#e2e2e2"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/btn_search"
                            android:text="검색어를 입력해주세요."
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:gravity="center_vertical"
                            android:textSize="12dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:src="@drawable/ic_search_light"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitCenter"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:background="#AAA"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/web_view_box"
            android:background="#000"
            android:orientation="horizontal"
            android:layout_width="800px"
            android:layout_height="400px">
            <WebView
                android:id="@+id/web_view"
                android:scrollbars="none"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/ll_small_ctrl_box"
                android:visibility="visible"
                android:gravity="center"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/small_player_next"
                        android:src="@drawable/ic_skip_next_black_24dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="center"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/small_player_toggle"
                        android:src="@drawable/ic_pause_black_24dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="center"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/small_player_close"
                        android:src="@drawable/ic_close_black_24dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="center"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/small_song_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="눈물비 - 정동원"
                    android:textColor="#222"
                    android:focusable="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/util_box"
            android:background="#FFF"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/btn_timer"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_av_timer_black_24dp"
                        android:scaleType="fitCenter"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tv_timer"
                        android:layout_marginTop="5dp"
                        android:text="타이머"
                        android:textSize="12dp"
                        android:textColor="#222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btn_save_battery"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_battery"
                        android:scaleType="fitCenter"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="배터리절약"
                        android:textSize="12dp"
                        android:textColor="#222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_play_mode"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_repeat_black_24dp"
                        android:scaleType="fitCenter"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/tv_play_mode"
                        android:layout_marginTop="5dp"
                        android:text="순차재생"
                        android:textSize="12dp"
                        android:textColor="#222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:background="#AAA"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:background="#f1f5f6"
            android:layout_below="@+id/util_box"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll_blind"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:background="#000"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_save_mode_cancel"
                android:layout_marginTop="20dp"
                android:text="배터리 보호모드 해제"
                android:textColor="#FFF"
                android:background="@null"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>